<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/core.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/presentation_preview_item.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/normalize.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/auth.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery-ui.min.css")" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/png" href="@Url.Content("~/Content/images/favicon/favicon-32x32.png")" sizes="32x32">
    <link rel="icon" type="image/png" href="@Url.Content("~/Content/images/favicon/favicon-96x96.png")" sizes="96x96">
    <link rel="icon" type="image/png" href="@Url.Content("~/Content/images/favicon/favicon-16x16.png")" sizes="16x16">
    <!--[if IE]>
    <link rel="shortcut icon" href="@Url.Content("~/Content/images/favicon/favicon.ico")" type="image/vnd.microsoft.icon" />
    <![endif]-->
    <script src="@Url.Content("~/scripts/lib/require.js")" type="text/javascript"></script>
    <script>
        Yourslides = {
            justLoaded: true
        };
    </script>
    <script src="@Url.Content("~/scripts/config.js")" type="text/javascript"></script>
    @RenderSection("Styles", false)
    @RenderSection("head", false)
</head>
<body>
    <div class="wrap">
        <a id="back-to-top-button" class="back-to-top-button">
            <img src="@Url.Content("~/Content/images/scrollupicon60.png")" />
        </a>
        <div class="header">
            <div class="header__logo">
                <a href="/"><img src=@Url.Content("~/Content/images/logo60.jpg")></a>
            </div>
            <div class="header__container">
                <div class="header__user-panel">
                    @Html.Partial("_UserPanel")
                </div>
                <div class="header__search">
                    @using (Html.BeginForm("Index", "Home", FormMethod.Get, new { id = "search-form", @class = "header__search-form search-form", autocomplete = "off" })) {
                        <div class="search-form__input-text-container">
                            <div style="height: 100%">
                                <input type="text" class="search-form__input-text" name="searchstring" autocomplete="off" value="">
                            </div>

                        </div>
                        <div class="search-form__input-text-container">
                            <button id="search-submit-button" type="submit" class="ys-button">Поиск</button>
                        </div>
                    }

                </div>

            </div>
        </div>
        <div class="content_main">
            @RenderBody()
        </div>
        <div class="ys-clearfix"></div>
        <div class="footer">
            YourSlides @DateTime.Now.Year
        </div>
    </div>
    <script src="~/scripts/app/basic.js" type="text/javascript"></script>
</body>
</html>
