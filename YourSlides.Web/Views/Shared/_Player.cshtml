@model Yourslides.Model.Api.PresentationApi

<object class="player__container">
    <param name="movie" value="@Url.Content("~/Content/player.swf")"/>
    <param name="FlashVars" value="img_url=@Url.Content(Path.Combine("~/storage/",Model.Id))/&amount_sl=@Model.SlideCount"/>
    <param name="allowFullScreen" value="true"/>
    <param name="scale" value="noScale"/>
    <param name="bgcolor" value="@Model.ScreenBackgroundColor"/>
    <param name="wmode" value="opaque" />
    <embed src="@Url.Content("~/Content/player.swf")" class="player__container" allowfullscreen="true" scale="noScale" flashvars="img_url=@Url.Content(Path.Combine("~/storage/",Model.Id))/&amount_sl=@Model.SlideCount" bgcolor="@Model.ScreenBackgroundColor" wmode="opaque">
</object>